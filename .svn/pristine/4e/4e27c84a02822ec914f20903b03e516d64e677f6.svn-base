@mixin use-flex {
	display: flex;
	display: -webkit-flex;
}

$articleFontColor: rgb(102, 102, 102);

a {
	text-decoration: none;
	cursor: pointer;
}

ul {
	padding: 0;
}

li {
	list-style: none;
}

.clearfix:before, .clearfix:after {
	content:"";
	display:table;
}

.clearfix:after{
	clear:both;
	overflow:hidden;
}

.clearfix{
    zoom:1;
}