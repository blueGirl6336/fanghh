var module = angular.module('BuildingList', []);

module.controller('BuildingListController', ['$scope', '$http', '$location', '$rootScope', '$cookieStore', function ($scope, $http, $location, $rootScope, $cookieStore) {

    //////////////////////////////////////////////////////////////////////
    /*
      一卓学长
    */

    var city_id = "";
    var reg_id = "";
    var key_name = "";

    var that = this;

    // 获取城市和区域
    $http({
