.pop-up {
  width: 600px;
  height: 400px;
  border-radius: 10px;
  -webkit-border-radius: 10px;
  -moz-border-radius: 10px;
  position: fixed;
  z-index: 99999;
  background-color: white;
  top: 25%;
  left: 30%;
  display: none;
}

.pop-up-cover {
  position: fixed;
  z-index: 9999;
  top: 0;
  left: 0;
  display: none;
  width: 100%;
  height: 100%;
  opacity: 0.5;
  background: #000 none repeat scroll 0 0;
}

.pop-up .pop-up-title {
  padding-left: 30px;
  color: #666;
}

.pop-up .close-btn {
  float: right;
  font-size: 30px;
  margin: -11px 12px 0 0;
  cursor: pointer;
}

.pop-up .separate-line {
  height: 2px;
  background-color: #e5e5e5;
  margin: 0 24px; 
}

.pop-up .pop-up-form {
  text-align: center;
}

.pop-up .pop-up-form .form-title {
  font-size: 16px;
  width: 100px;
  display: inline-block;
  text-align: justify;
  text-align-last: justify;
  margin-right: 10px;
}

.pop-up .pop-up-form .form-field {
  width: 250px;
  position: inherit;
}

.pop-up .pop-up-form .commit-btn {
  width: 200px;
  height: 50px;
  background-color: orange;
  color: white;
  border-radius: 6px;
  -webkit-border-radius: 6px;
  -moz-border-radius: 6px;
  font-size: 16px;
  margin-top: 20px;
  cursor: pointer;
}
