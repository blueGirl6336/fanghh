/* 添加房源 */
.house-box-container {
  width: 100%;
  overflow: hidden;   /* 解决 div 高度为 0 的问题 */
}

.house-box {
  height: 75px;
  width: 230px;
  background-color: #e5e5e5;
  border: 1px solid #e5e5e5;
  margin: 0 20px 20px 0;
  position: relative;
  float: left;
  z-index: 99
}

.house-box .house-name {
  font-size: 16px;
  font-weight: bold;
  padding: 10px 0 0 15px;
}

.house-box .price-box {
  font-size: 14px;
  color: gray;
  margin-top: 12px;
}

.house-box .price-box span {
  margin: 0 4px 0 10px; 
}

.house-box .close-btn {
  position: absolute;
  right: 0;
  top: 0;
  display: none;
  cursor: pointer;
}

.house-box:hover .close-btn {
  display: block;
}

/* 弹出框 */
/* TODO: 封装 */
.pop-up {
  width: 600px;
  height: 400px;
  border-radius: 10px;
  -webkit-border-radius: 10px;
  -moz-border-radius: 10px;
  position: fixed;
  z-index: 99999;
  background-color: white;
  top: 25%;
  left: 30%;
  display: none;
}

.pop-up-cover {
  position: fixed;
  z-index: 9999;
  top: 0;
  left: 0;
  display: none;
  width: 100%;
  height: 100%;
  opacity: 0.5;
  background: #000 none repeat scroll 0 0;
}

.add-house-pop-up .add-house-title {
  padding-left: 30px;
  color: #666;
}

.add-house-pop-up .close-btn {
  float: right;
  font-size: 30px;
  margin: -11px 12px 0 0;
  cursor: pointer;
}

.add-house-pop-up .separate-line {
  height: 2px;
  background-color: #e5e5e5;
  margin: 0 24px; 
}

.add-house-pop-up .add-house-form {
  text-align: center;
}

.add-house-pop-up .add-house-form .add-house-section {
  margin-top: 20px;
  height: 60px;
}

.add-house-pop-up .add-house-form .add-house-section .form-disabled-field {
  background-color: #e5e5e5;
}

.add-house-pop-up .add-house-form .add-house-btn {
  width: 200px;
  height: 50px;
  background-color: orange;
  color: white;
  border-radius: 6px;
  -webkit-border-radius: 6px;
  -moz-border-radius: 6px;
  font-size: 16px;
  margin-top: 20px;
  cursor: pointer;
}

.add-house-pop-up .add-house-form .form-title {
  font-size: 16px;
  width: 100px;
  display: inline-block;
  text-align: justify;
  text-align-last: justify;
  margin-right: 10px;
}

.add-house-pop-up .add-house-form .form-field {
  width: 250px;
  position: inherit;
}

.activity-launch .button-area button {
  margin-top: 35px;
  padding: 0 100px;
  text-align: justify;
  text-align-last: justify;
}

.activity-launch select {
  background-color: white;
}

.activity-launch .form-item .form-field {
  position: static;
  margin-left: 86px;
}

.activity-launch .rule-list {
  margin-left: 84px;
  margin-top: -10px;
}

.activity-launch .rule-list li {
  float: left;
  width: 84px;
  height: 40px;
  line-height: 40px;
  text-align: center;
  background-color: #eee;
  border: 1px solid #e5e5e5;
  cursor: pointer;
  font-size: 15px;
}

.activity-launch .rule-list li.select {
  background-color: white;
}

.activity-launch .rule-title-box {
  margin-left: 86px;
}

.activity-launch .rule-title-box textarea {
  width: 350px;
}

.activity-launch .rule-box {
  display: none;
}

.activity-launch .rule-box.active {
  display: block;
}
