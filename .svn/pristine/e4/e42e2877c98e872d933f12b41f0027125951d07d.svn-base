.pic-talk-container .pic-talk-model-box {
  margin-bottom: 10px;
}

.pic-talk-container .fileupload {
  width: 290px;
  height: 37px;
  position: relative;
  overflow: hidden;
  background-color: #eee;
  border: 1px solid #ccc;
}

.pic-talk-container .fileupload input {
  position: absolute;
  top: 0;
  right: 0;
  cursor: pointer;
  opacity: 0.0;
  filter: alpha(opacity=0);
  font-size: 300px;
}

.pic-talk-container .inputArea .form-item .form-field {
  position: static;
  margin-left: 86px;
}

.pic-talk-container .pic-talk-img {
  margin: 15px 20px;
}

.pic-talk-container  .pic-talk-model-box .row {
  clear: right;
}

.pic-talk-container .pic-talk-delete-btn {
  float: right;
  margin: 0 10px 0 0;
  width: 20px;
  height: 20px;
  cursor: pointer;
}

.pic-talk-container .pic-talk-model-box {
  padding-right: 50px;
}

