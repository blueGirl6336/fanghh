* {
    margin: 0 0;
    padding: 0 0;
}
body {
    


}

.contain {
    width: 100%;
    height: 100%;
    background-image: url("../image/login_bgg.jpg"); 
    background-repeat:no-repeat;
    background-size: 100% 100%;
    display: -webkit-flex;
    justify-content: center;
    align-items: center;
}

.login-box {
    background-image: url("../image/login_bg.png");
    background-repeat:no-repeat;
    background-size: cover;
    width: 550px;
    height: 621px;
}

.login-form {
    width: 370px;
    height: 240px;
    position: relative;
    left: 90px;
    top: 250px;
    flex-direction: column;
       
}

.login-form div {
    margin: 0 auto;
}

.login-form span {
    font-size: 16px;
    color: #666666;
    float: left;
    line-height: 40px;
}

.inp {
    margin-left: 20px;
    width: 290px;
    height: 40px;
    float: right;
    background-color: #f9f9f9;
    border-color: #e0e0e0;
}

.iinp {
    width: 190px;
    height: 40px;
    float: right;
    background-color: #f9f9f9;
    border-color: #e0e0e0;
}

.inputDiv img {
    float: right;
    width: 100px;
    height: 43px;
    border-color: #e0e0e0;
    vertical-align:middle
}

.btn-l {
    height: 45px;
    width: 290px;
    float: right;
    border-radius: 8px;
    background-color: #338FCC;
    color: white;
    font-size: 16px;
}

.inputDiv {
    height: 40px;
    padding-bottom: 25px;
}

.footer-l {
    position: absolute;  bottom: 0;
    height: 50px;
    margin: 0 auto;
    text-align: center;
    color: #FFF;
}